<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <Button
                    android:id="@+id/btn_apelsin"
                    android:text="apelsin"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <EditText
                    android:id="@+id/et_key"
                    android:hint="yozing"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:scaleType="center"
                    android:src="@drawable/im_simple1"
                    app:strokeColor="@color/teal_200"
                    app:strokeWidth="10dp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    app:cardCornerRadius="150dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp">

                    <ImageView
                        android:src="@drawable/im_simple1"
                        android:scaleType="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <Button
                app:backgroundTint ="@null"
                android:background="@drawable/button_gradiant"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <Button
                app:backgroundTint ="@null"
                android:background="@drawable/buttom_roundend"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <Button
                android:layout_gravity="center"
                app:backgroundTint ="@null"
                android:background="@drawable/buttom_cricle"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </Button>

            <Button
                app:backgroundTint ="@null"
                android:background="@drawable/buttom_borders"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <Button
                app:backgroundTint ="@null"
                android:background="@drawable/buttom_dashed"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <Button
                app:backgroundTint ="@null"
                android:background="@drawable/buttom_gradiant_rotate"
                android:text="Button 1"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </Button>

            <EditText
                android:padding="10dp"
                android:hint="Write something here..."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </EditText>
            <EditText
                android:background="@drawable/edittext_bottom_border"
                android:padding="10dp"
                android:hint="Write something here..."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </EditText>

            <EditText
                android:background="@drawable/edittext_border_color"
                android:padding="10dp"
                android:hint="Write something here..."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </EditText>

            <EditText
                android:background="@drawable/edittext_border_style"
                android:padding="10dp"
                android:hint="Write something here..."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </EditText>
            <EditText
                android:background="@drawable/edittext_corners_border"
                android:padding="10dp"
                android:hint="Write something here..."
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </EditText>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>